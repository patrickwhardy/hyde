#!/usr/bin/env ruby
require './lib/structure'
require './lib/converter'
require './lib/new_blog_files'
require 'FileWatcher'
require 'kramdown'
require 'pry'
@home = File.expand_path("~/my_sweet_blog")

args = ARGV
puts "You ran Hyde with these arguments: #{args}"
if args[0] == "new"
  structure = Structure.new(args[1])
elsif args[0] == "build"
  converter = Converter.new(args[1])
elsif args[0] == "post"
 new_blog_post = NewBlogFiles.new(args[1], args[2], args[3..-1])
elsif args[0] == "watchfs"
  FileWatcher.new(["#{@home}/source"]).watch do |filename, event|
    if(event == :changed)
      `bin/hyde build #{@home}`
       puts "_output updated!"
    end
  end
end
